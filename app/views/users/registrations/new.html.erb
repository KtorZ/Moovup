<section class="container container-margin text-center">
  <h1>Inscription</h1>
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
        <div class="form-group text-left">
          <label class="visible-md visible-lg">Adresse email</label>
		  <%= f.email_field :email, :autofocus => true, :class => 'form-control', autocomplete: "off", placeholder: "Adresse email" %>
        </div>
        <div class="form-group text-left">
          <label class="visible-md visible-lg">Mot de passe</label>
		  <%= f.password_field :password, :class => 'form-control', autocomplete: "off", placeholder: "Mot de passe" %>
        </div>
        <div class="form-group text-left">
          <label class="visible-md visible-lg">Mot de passe (répétition)</label>
		  <%= f.password_field :password_confirmation, :class => 'form-control', autocomplete: "off", placeholder: "Mot de passe(répétition)" %>
        </div>
        <div class="form-group text-left">
            <div class="checkbox">
              <label for="i_am_pro">
              	<%= f.check_box :i_am_pro, id: "i_am_pro" %> Je suis un professionnel
              </label>
            </div>
        </div>
      <div class="collapse" id="register_pro">
        <div class="form-group text-left">
          <label class="visible-md visible-lg">Nom</label>
          <%= f.text_field :lastname, :class => 'form-control', autocomplete: "off", placeholder: "Nom" %>
        </div>
        <div class="form-group text-left">
          <label class="visible-md visible-lg">Prénom</label>
          <%= f.text_field :firstname, :class => 'form-control', autocomplete: "off", placeholder: "Prénom" %>
        </div>
        <div class="form-group text-left">
          <label class="visible-md visible-lg">Adresse</label>
          <%= f.text_field :address, :class => 'form-control', autocomplete: "off", placeholder: "Adresse" %>
        </div>
        <div class="form-group text-left">
          <label class="visible-md visible-lg">Téléphone</label>
          <%= f.text_field :phone, :class => 'form-control', autocomplete: "off", placeholder: "Téléphone" %>
        </div>
        <div class="form-group text-left">
          <label class="visible-md visible-lg">Date de naissance (jj/mm/aaaa)</label>
          <%= f.text_field :birthday, :class => 'form-control', autocomplete: "off", placeholder: "Date de naissance (jj/mm/aaaa)" %>
        </div>
      </div>

      <div class="col-md-12 text-center"><%= f.submit  "S'inscrire", :class => "btn btn-primary"%></div>
      </div>
    <% end %>
</section>