<section class="container">
    <h1 class="text-center">Modification du profil</h1>
    <%= devise_error_messages! %>

  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
  <%= form_for current_user, :as => :user, url: registration_path(:user), :html => {method: :put} do |f| %>
    <div class="form-group text-left">
      <label class="visible-md visible-lg">Adresse email</label>
      <%= f.email_field :email, :autofocus => true, :class => 'form-control', placeholder: "Adresse email" %>
    </div>

    <div class="form-group text-left">
      <label class="visible-md visible-lg">Nom</label>
      <%= f.text_field :lastname, :class => 'form-control', placeholder: "Nom" %>
    </div>

    <div class="form-group text-left">
      <label class="visible-md visible-lg">Prénom</label>
      <%= f.text_field :firstname, :class => 'form-control', placeholder: "Prénom" %>
    </div>

    <div class="form-group text-left">
      <label class="visible-md visible-lg">Adresse</label>
      <%= f.text_field :address, :class => 'form-control', placeholder: "Adresse" %>
    </div>

    <div class="form-group text-left">
      <label class="visible-md visible-lg">Téléphone</label>
      <%= f.text_field :phone, :class => 'form-control', placeholder: "Téléphone" %>
    </div>

    <div class="form-group text-left">
      <label class="visible-md visible-lg">Date de naissance</label>
      <%= f.text_field :birthday, :class => 'form-control', placeholder: "Date de naissance" %>
    </div>

    <div class="form-group text-left">
      <label class="visible-md visible-lg">Mot de passe courant (validation)</label>
      <%= f.password_field :current_password, :class => 'form-control', placeholder: "Mot de passe courant (validation)" %>
    </div>

    <div class="col-md-12 text-center">
        <%= f.submit "Modifier le profil", :class => 'btn btn-primary' %>
        <%= link_to "Annuler", user_profil_path, :class => 'btn btn-danger' %>
    </div>
  <% end %>
</div>
</section>