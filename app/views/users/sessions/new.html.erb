<section class="container container-margin text-center">
	<h1>Connexion</h1>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2" id="register_part">
			<div class="form-group text-left">
				<label class="visible-md visible-lg">Adresse email</label>
				<%= f.email_field :email, :autofocus => true, :class => 'form-control', placeholder: "Adresse email" %>
			</div>

			<div class="form-group text-left">
				<label class="visible-md visible-lg">Mot de passe</label>
				<%= f.password_field :password, :class => 'form-control', placeholder: "Mot de passe" %>
			</div>

			<% if devise_mapping.rememberable? %>
		        <div class="form-group text-left">
		            <div class="checkbox">
		              <label for="remember_me">
		              	<%= f.check_box :remember_me, id:"remember_me" %> Se souvenir de moi
		              </label>
		            </div>
		        </div>
			<% end %>
			<div class="col-md-12 col-xs-12 col-sm-12 col-lg-12 text-center">
				<%= f.submit  "Se connecter", :class => "btn btn-primary"%>
			</div>
		</div>
	<% end %>
</section>