$('.white-flash').fadeOut(function(){$('.white-flash').remove()});
<% if @error.blank? %>
	$('#offer_<%= @offer.id %>').fadeOut();
<% else %>
	$('body').prepend('<div class="alert-dismissable alert fade-in alert-danger"><%= @error %><button class="close" data-dismiss="alert">&times;</button></div>');
<% end %>